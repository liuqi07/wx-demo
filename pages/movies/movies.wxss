/* movies.wxss */
@import 'movie-grid/movie-grid-tpl.wxss';
@import 'movie-list/movie-list-tpl.wxss';

.container {
    display: flex;
	flex-direction: column;
}
.search {
	display: flex;
	flex-direction: row;
	background: #f2f2f2;
    height: 80rpx;
}
.search image {
	width: 40rpx;
	height: 40rpx;
	margin-right: 50rpx;
	margin-top: 5rpx;
}
.search icon {
    margin: auto 40rpx;
}
.search input {
	width: 600rpx;
	font-size: 28rpx;
    height: 100%;
}
.placeholder {
    color: #d1d1d1;
    /*font-size: 14rpx;*/
    line-height: 80rpx;
}
.search-panel {
    position: absolute;
    top: 80rpx;
}