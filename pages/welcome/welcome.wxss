.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #b3d4db;
}

.user-avatar {
    width: 200rpx;
    height: 200rpx;
    margin-top: 160rpx;
}
.user-name {
    margin-top: 80rpx;
    font-size: 32rpx;
    font-weight: bold;
}
.moto {
    font-size: 22rpx;
    font-weight: bold;
    line-height: 80rpx;
    color: #405f80;
}
.moto-container {
    margin-top: 200rpx;
    border: 1px solid #405f80;
    width: 200rpx;
    height: 80rpx;
    border-radius: 5px;
    text-align: center;
}

page {
    background-color: #b3d4db;
    height: 100%;
}